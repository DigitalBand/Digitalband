# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                               @controllers.Application.index
GET     /about                                          @controllers.Application.about
GET     /contacts                                       @controllers.Application.contacts

# Catalogue
GET     /category/list                                  @controllers.Category.list

#Images
GET     /product/:productId/images/:size/:imageNumber   @controllers.Image.productImage(productId: Int, imageNumber: String, size: String)
GET     /category/image/:imageName                      @controllers.Image.categoryImage(imageName: String)
POST    /sendFeedback               @controllers.Application.sendFeedback

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
